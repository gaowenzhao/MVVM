<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_18"
    android:paddingBottom="@dimen/dp_18"
    android:background="@color/white">
   <ImageView
       android:id="@+id/iv_pic"
       android:layout_width="@dimen/dp_22"
       android:layout_height="@dimen/dp_22"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       />
    <TextView
        android:id="@+id/tv_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="first"
        android:layout_toRightOf="@+id/iv_pic"
        android:layout_marginLeft="@dimen/dp_5"
        android:textColor="@color/c_333"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@+id/iv_pic"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pic"
        app:layout_constraintStart_toEndOf="@+id/iv_pic"
        />
    <TextView
        android:id="@+id/tv_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="second"
        android:layout_toRightOf="@+id/tv_first"
        android:layout_marginLeft="@dimen/dp_7"
        android:textColor="@color/c_999999"
        android:textSize="@dimen/dp_10"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="@+id/iv_pic"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pic"
        app:layout_constraintStart_toEndOf="@+id/tv_first"
        />
    <TextView
        android:id="@+id/tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看全部"
        android:visibility="gone"
        android:textColor="@color/c_999999"
        android:textSize="12dp"
        android:drawableRight="@mipmap/ic_home_right_arrow"
        app:layout_constraintTop_toTopOf="@+id/iv_pic"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pic"
       app:layout_constraintRight_toRightOf="parent"
        android:drawablePadding="@dimen/dp_5"
        />
</android.support.constraint.ConstraintLayout>